#include "../include/functions.h"


template <class T>

int getSubSeq(T* arr, int length)
{
	VEC<int> subLength;
	//int arrLength = ((int)sizeof(arr))/((int)sizeof(arr[0]));
	//int arrLength = *(&arr + 1) - arr;
	int ans = 0;
	COUT << ENDL <<  ENDL << ENDL;

	for(int i = 0; i < length; ++i)
	{
		subLength.push_back(1);
		//COUT << subLength[i] << ENDL;
		//COUT << "array @ i = " << i << ": " << arr[i];
		
		//COUT << "i = " << i << ": " << arr[i] << " ";
		//COUT << ENDL << ENDL;

		for(int j = 0; j < i; ++j)
		{	
			//COUT << " j = " << j << ": " << arr[j] << " ";
			//COUT << "\t sL[j] = " << subLength[j] << "; sL[i] = " << subLength[i];
			
			if(arr[j] <= arr[i] && (subLength.at(j)+1) > (subLength.at(i)))
			{
				subLength.at(i) = subLength.at(j) + 1;
				if(subLength[i] > ans)
				{
					ans = subLength[i];
				}
			}
			
			/*
			if(arr[j] <= arr[i])
			{
				COUT << " :) ";
				if(subLength.at(j) > subLength.at(i))
				{
					COUT << " !!! ";
					subLength.at(i) = subLength.at(j) + 1;
				}
				COUT << ENDL;
			}
			else
			{
				COUT << ENDL;
			}
			*/
		}
		//COUT << ENDL << ENDL << ENDL;
	}
	return ans;
}



int main(){
	
	int ex1 [] = {10, 9, 2, 5, 3, 7, 101, 18};
	int ans1 = getSubSeq(ex1, 8);
	
	COUT << "ans1: " << ans1 << ENDL;

	return 0;
}
